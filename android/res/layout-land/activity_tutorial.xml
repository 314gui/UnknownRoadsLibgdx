<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutoriallayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgroad1_nosplit"
    android:orientation="vertical"
    tools:context=".TutorialActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item3"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:fontFamily="@font/bangers"
            android:text="Tutorial"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="50sp" /><![CDATA[

        />


    ]]>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:fontFamily="@font/bangers"
            android:text="Use your mobile phone as a steering wheel:"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="234dp"
            android:fontFamily="@font/bangers"
            android:text="
To speed up, you should tilt the mobile phone forward;\nTo turn left, you should tilt the mobile phone left;\nTo turn right, you should tilt the mobile phone right;\nTo reverse, you should tilt the cell phone back.\n"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="260dp"
            android:fontFamily="@font/bangers"
            android:text="Tap to go back"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>